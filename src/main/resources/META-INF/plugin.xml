<idea-plugin>
    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>com.github.dtradd12.minimusicplayerintellij</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>Catapalooza!</name>

    <!-- Indicate this plugin can be loaded in all IntelliJ Platform-based products. -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Text to display as description on Preferences/Settings | Plugin page -->
    <description>
        <![CDATA[
        Tired of staring at code all day? Here's a random cat generator to get you through it!
        ]]>
    </description>

    <!-- Text to display as company information on Preferences/Settings | Plugin page -->
    <vendor url="https://plugins.jetbrains.com">IntelliJ Platform SDK</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Catapalooza!" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.catapalooza.toolWindow.CatapaloozaWindowFactory"/>
    </extensions>

</idea-plugin>
